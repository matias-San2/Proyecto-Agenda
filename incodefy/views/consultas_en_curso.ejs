<!DOCTYPE html>
<html lang="<%= i18n.language %>">
<head>
  <meta charset="UTF-8" />
  <title><%= t('in_progress.title') %></title>
  <link rel="stylesheet" href="/css/navbar.css?v=<%= Date.now() %>">
  <link rel="stylesheet" href="/css/consultas_en_curso.css?v=<%= Date.now() %>">
  <link rel="stylesheet" href="/css/footer.css?v=<%= Date.now() %>">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  
  <style>
        :root {
        --personalization-loaded: true;
        
        <% if (personalization && personalization['theme.primary_color']) { %>
        --primary-color: <%= personalization['theme.primary_color'] %>!important;
        <% if (personalization['theme.primary_color_light']) { %>
        --primary-color-light: <%= personalization['theme.primary_color_light'] %>!important;
        <% } %>
        <% if (personalization['theme.primary_color_dark']) { %>
        --primary-color-dark: <%= personalization['theme.primary_color_dark'] %>!important;
        <% } %>
        <% } %>
        
        <% if (personalization && personalization['theme.mode'] === 'dark') { %>
        --background-color: #181818 !important;
        --text-color: rgba(241, 241, 241, 0.98) !important;
        --secondary-text-color: #aab1bb !important;
        --card-background: #222222 !important;
        --border-color: #2b2b2b !important;
        <% } %>
        }
        <% if (personalization && personalization['theme.mode'] === 'dark') { %>
        .menu-link img {
            filter: brightness(0) invert(1)!important;
        }
        <% } %>
    </style>
</head>
<body data-theme="<%= (locals.personalization && personalization['theme.mode']) || 'light' %>">
  <div class="container-fluid">
    <div class="row">
      <%- include("navbar") %>

      <div class="main">

        <!-- Header -->
        <div class="header-section">
          <h1>
            <i class="fas fa-stethoscope me-2 header-icon"></i>
            <%= t('in_progress.header') %>
          </h1>
          <p><%= t('in_progress.subheader') %></p>
        </div>

        <!-- Estadísticas -->
        <div class="stats-container">
          <div class="row g-3">
            <div class="col-md-4">
              <div class="card stat-card stat-pendientes">
                <div class="card-body text-center">
                  <div class="stat-number" id="stat-pendientes">—</div>
                  <p class="stat-label"><%= t('common.pending_appointments') %></p>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card stat-card stat-confirmadas">
                <div class="card-body text-center">
                  <div class="stat-number" id="stat-confirmadas">—</div>
                  <p class="stat-label"><%= t('common.confirmed_appointments') %></p>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card stat-card stat-total">
                <div class="card-body text-center">
                  <div class="stat-number" id="stat-total">—</div>
                  <p class="stat-label"><%= t('common.total_in_progress') %></p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Tabla -->
        <div class="card consultas-card">
          <div class="leyenda" id="leyendaEstado" hidden>
            <div class="caja">
                <span class="estado-badge estado-pendiente"><%= t('common.pending') %></span> 
                <div class="detalle"><%= t('in_progress.legend.pending') %></div>
            </div>
            <div class="caja">
                <span class="estado-badge estado-confirmada"><%= t('common.confirmed') %></span> 
                <div class="detalle"><%= t('in_progress.legend.confirmed') %></div>
            </div>
          </div>
          <div class="table-container" id="contenedor_en_curso">
            <div class="loading-container">
              <div class="spinner"></div>
              <p><%= t('in_progress.loading') %></p>
            </div>
            <div class="no-results-container" style="display: none;">
              <h3><%= t('in_progress.no_appointments_title') %></h3>
              <p><%= t('in_progress.no_appointments_desc') %></p>
            </div>
            <table class="table table-hover align-middle" id="tabla-consultas" style="display: none;">
              <thead>
                <tr>
                  <th><%= t('common.box') %></th>
                  <th><%= t('common.doctor') %></th>
                  <th><%= t('common.start_time') %></th>
                  <th><%= t('common.end_time') %></th>
                  <th><%= t('common.status') %></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <!-- Filas se insertarán dinámicamente -->
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <%- include("footer") %>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/consultas_en_curso.js?v=<%= Date.now() %>"></script>
  <script>
        window.userPersonalization = <%- JSON.stringify(personalization || {}) %>;
        window.i18nConsultas = {
          horario: "<%= t('common.start_time') %>",
          medico: "<%= t('common.doctor') %>",
          box: "<%= t('common.box') %>",
          tipoConsulta: "<%= t('common.consult_type') %>",
          estado: "<%= t('common.status') %>",
          pendiente: "<%= t('common.pending') %>",
          confirmada: "<%= t('common.confirmed') %>",
          confirmar: "<%= t('common.confirm_appointment') %>",
          desconfirmar: "<%= t('common.confirm_appointment') %>",
          desconfirmar: "<%= t('common.unconfirm_appointment') %>",
          cargando: "<%= t('in_progress.loading') %>",
          noHay: "<%= t('in_progress.no_appointments_title') %>",
          noHayDesc: "<%= t('in_progress.no_appointments_desc') %>",
          errorCargar: "<%= t('common.error') %>"
        };
  </script>
</body>
</html>
