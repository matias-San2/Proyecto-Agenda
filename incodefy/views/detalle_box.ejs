<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Detalle Box</title>
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/detalle_box.css">
  <link rel="stylesheet" href="/css/footer.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

  <!-- Variables CSS personalizadas -->
    <style>
        :root {
        --personalization-loaded: true;
        
        <% if (personalization && personalization['theme.primary_color']) { %>
        --primary-color: <%= personalization['theme.primary_color'] %>!important;
        <% if (personalization['theme.primary_color_light']) { %>
        --primary-color-light: <%= personalization['theme.primary_color_light'] %>!important;
        <% } %>
        <% if (personalization['theme.primary_color_dark']) { %>
        --primary-color-dark: <%= personalization['theme.primary_color_dark'] %>!important;
        <% } %>
        <% } %>
        
        <% if (personalization && personalization['theme.mode'] === 'dark') { %>
        --background-color: #181818 !important;
        --text-color: rgba(241, 241, 241, 0.98) !important;
        --secondary-text-color: #aab1bb !important;
        --card-background: #222222 !important;
        --border-color: #2b2b2b !important;
        <% } %>
        }
        <% if (personalization && personalization['theme.mode'] === 'dark') { %>
        .menu-link img {
            filter: brightness(0) invert(1)!important;
        }
        .date-input::-webkit-calendar-picker-indicator {
            filter: invert(1)!important;
        }
        <% } %>
    </style>
</head>
<body data-box-id="<%= box_id %>">
    <div class="container-fluid">
        <div class="row">
            <%- include("navbar") %>
            
            <div class="main-container">
                <div class="page-header fade-in">
                    <h1><i class="fas fa-cube"></i> <%= nombre %></h1>
                </div>

                <div class="row mb-4">
                    <div class="col-12 col-sm-12 col-md-6 col-lg-7 col-xl-8 mb-3">
                        <div class="info-card fade-in">
                            <div class="d-flex align-items-center">
                                <div class="card-icon me-3">
                                    <i class="fas fa-info-circle"></i>
                                </div>
                                <h3 class="card-title mb-4">Información del Box</h3>
                            </div>
                            <div class="info-grid">
                                <div class="info-item">
                                    <div class="info-icon">
                                        <i class="fas fa-tag"></i>
                                    </div>
                                    <span class="info-label">Nombre:</span>
                                    <span class="info-value"> <%= nombre %></span>
                                </div>
                                <div class="info-item">
                                    <div class="info-icon">
                                        <i class="fas fa-map-marker-alt"></i>
                                    </div>
                                    <span class="info-label">Pasillo:</span>
                                    <span class="info-value"><%= idpasillo %></span>
                                </div>
                                <div class="info-item">
                                    <div class="info-icon">
                                        <i class="fas fa-check-circle"></i>
                                    </div>
                                    <span class="info-label">Estado:</span>
                                    <span class="info-value">
                                        <span class="status-badge status-activo"> <%= estado %> </span>
                                    </span>
                                </div>
                            </div>
                            <button class="instruments-btn" onclick="abrirModalInstrumentos()">
                                <i class="fas fa-stethoscope"></i>
                                Ver Instrumentos del Box
                            </button>
                        </div>
                    </div>
                    <div class="col-12 col-sm-12 col-md-6 col-lg-5 col-xl-4 mb-3">
                        <div class="date-selector-card fade-in">
                            <div class="d-flex align-items-center">
                                <div class="card-icon me-3">
                                    <i class="fas fa-calendar-alt"></i>
                                </div>
                                <h3 class="card-title mb-4">Seleccionar Fecha</h3>
                            </div>
                            <div class="date-controls">
                                <button class="date-btn" onclick="cambiarFecha(-1)" aria-label="Día anterior" title="Día anterior">
                                    <i class="fas fa-chevron-left"></i>
                                </button>

                                <div class="current-date" id="fechaLabel"></div>

                                <button class="date-btn" onclick="cambiarFecha(1)" aria-label="Día siguiente" title="Día siguiente">
                                    <i class="fas fa-chevron-right"></i>
                                </button>
                            </div>
                            <div class="mt-3 text-center">
                                <input type="date" class="date-input" id="selectorFecha" aria-label="Seleccionar fecha" onchange="seleccionarFecha(this.value)">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="custom-tabs fade-in">
                    <button class="tab-btn active" onclick="mostrarTab('consultas')">
                        <i class="fas fa-clipboard-list"></i> Consultas del Día
                    </button>
                    <button class="tab-btn" onclick="mostrarTab('estadisticas')">
                        <i class="fas fa-chart-bar"></i> Estadísticas y Métricas
                    </button>
                </div>

                <!-- Contenido Consultas -->
                <div id="tab-consultas" class="tab-content active fade-in">
                    <div class="enhanced-table">
                        <table class="table table-hover mb-0" aria-label="Consultas del día">
                            <thead>
                                <tr>
                                    <th scope="col"><i class="fas fa-clock" aria-hidden="true"></i> Hora</th>
                                    <th scope="col"><i class="fas fa-user-md" aria-hidden="true"></i> Médico</th>
                                    <th scope="col"><i class="fas fa-heartbeat" aria-hidden="true"></i> Especialidad</th>
                                    <th scope="col"><i class="fas fa-info-circle" aria-hidden="true"></i> Estado</th>
                                    <th scope="col"><i class="fas fa-notes-medical" aria-hidden="true"></i> Tipo Consulta</th>
                                </tr>
                            </thead>
                            <tbody id="tablaHorarios"></tbody>
                        </table>
                    </div>
                </div>

                <!-- Contenido Estadísticas -->
                <div id="tab-estadisticas" class="tab-content fade-in">
                    <!-- Métricas principales -->
                    <div class="metrics-grid row g-3">
                        <div class="col-6 col-lg-3">
                            <div class="metric-card">
                                <div class="metric-value" id="totalConsultas"></div>
                                <div class="metric-label">Total Consultas</div>
                            </div>
                        </div>
                        <div class="col-6 col-lg-3">
                            <div class="metric-card">
                                <div class="metric-value" id="usoBox"><span></span></div>
                                <div class="metric-label">Uso del Box</div>
                            </div>
                        </div>
                        <div class="col-6 col-lg-3">
                            <div class="metric-card">
                                <div class="metric-value" id="noRealizadas"></div>
                                <div class="metric-label">No Realizadas</div>
                            </div>
                        </div>
                        <div class="col-6 col-lg-3">
                            <div class="metric-card">
                                <div class="metric-value" id="cumplimiento"></div>
                                <div class="metric-label">Cumplimiento</div>
                            </div>
                        </div>
                    </div>

                    <!-- Gráficos -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="chart-card">
                                <h4 class="chart-title">Uso del Box</h4>
                                <canvas id="graficoUso" style="max-height: 350px;"></canvas>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="chart-card">
                                <h4 class="chart-title">Cumplimiento de Consultas</h4>
                                <canvas id="graficoCumplimiento" style="max-height: 350px;"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal Instrumentos -->
            <div id="modalInstrumentos" class="enhanced-modal" aria-hidden="true">
                <div class="modal-content-enhanced">
                    <div class="modal-header-enhanced">
                        <h3 class="modal-title-enhanced">
                            <i class="fas fa-stethoscope"></i>
                            Instrumentos del Box
                        </h3>
                        <button class="close-btn" onclick="cerrarModalInstrumentos()" aria-label="Cerrar modal">
                            <i class="fas fa-times" aria-hidden="true"></i>
                        </button>
                    </div>

                    <!-- Tabs de categoría -->
                    <div class="instrument-tabs" role="tablist" aria-label="Categorías de instrumentos">
                        <button id="tab-medico" class="tab-btn active" role="tab" aria-selected="true"
                                onclick="filtrarInstrumentos('MEDICO')" aria-controls="lista-instrumentos">
                            <i class="fas fa-stethoscope"></i> Médicos
                        </button>
                        <button id="tab-inmobiliario" class="tab-btn" role="tab" aria-selected="false"
                                onclick="filtrarInstrumentos('INMOBILIARIO')" aria-controls="lista-instrumentos">
                            <i class="fas fa-chair"></i> Inmobiliario
                        </button>
                    </div>

                    <div class="modal-body">
                        <% if (instrumentos && instrumentos.length) { %>
                            <ul id="lista-instrumentos" class="instrument-list-enhanced">
                                <% instrumentos.forEach(item => { %>
                                    <li class="instrument-item-enhanced" data-tipo="<%= item.tipo || 'MEDICO' %>">
                                        <span class="instrument-name"><%= item.nombre %></span>
                                        <span class="instrument-count"><%= item.cantidad %></span>
                                    </li>
                                <% }) %>
                            </ul>
                            <p id="msg-vacio" class="muted" style="display:none;">No hay elementos en esta categoría.</p>
                        <% } else { %>
                            <p>No se han registrado instrumentos para este box.</p>
                        <% } %>
                    </div>
                </div>
            </div>
            <%- include("footer") %>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/detalle_box.js?v=<%= Date.now() %>"></script>
    <script>
        window.userPersonalization = <%- JSON.stringify(personalization || {}) %>;
    </script>
</body>
</html>
