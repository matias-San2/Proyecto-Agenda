<!DOCTYPE html>
<html lang="<%= personalization['locale.language'] || 'es' %>">
<head>
  <meta charset="UTF-8">
  <title>Mi Perfil - PersonalizaciÃ³n</title>
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/perfil.css">
  <link rel="stylesheet" href="/css/footer.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  
  <!-- Variables CSS personalizadas -->
  <style id="personalization-styles">
    :root {
      --personalization-loaded: true;
      
      <% if (personalization && personalization['theme.primary_color']) { %>
      --primary-color: <%= personalization['theme.primary_color'] %>!important;
      <% if (personalization['theme.primary_color_light']) { %>
      --primary-color-light: <%= personalization['theme.primary_color_light'] %>!important;
      <% } %>
      <% if (personalization['theme.primary_color_dark']) { %>
      --primary-color-dark: <%= personalization['theme.primary_color_dark'] %>!important;
      <% } %>
      <% } %>
      
      <% if (personalization && personalization['theme.mode'] === 'dark') { %>
      --background-color: #181818 !important;
      --text-color: rgba(241, 241, 241, 0.98) !important;
      --secondary-text-color: #aab1bb !important;
      --card-background: #222222 !important;
      --border-color: #2b2b2b !important;
      <% } %>
    }
    <% if (personalization && personalization['theme.mode'] === 'dark') { %>
    .menu-link img {
      filter: brightness(0) invert(1)!important;
    }
    <% } %>
  </style>
</head>
<body data-theme="<%= personalization['theme.mode'] || 'light' %>">
  <div class="container-fluid">
    <div class="row">
      <%- include('navbar') %>

      <div class="main">
        <div class="top-header">
          <h1 class="page-title">Mi Perfil</h1>
          <p class="page-subtitle">Personaliza la apariencia de tu interfaz</p>
        </div>

        <div class="row justify-content-center">
          <div class="col-12 col-md-8 col-lg-6">
            <div class="profile-card">
              
              <!-- InformaciÃ³n del usuario -->
              <div class="user-info">
                <div class="user-avatar">
                  <i class="fas fa-user-circle"></i>
                </div>
                <div class="user-details">
                  <h3><%= user.nombre %></h3>
                  <p><%= user.email %></p>
                </div>
              </div>

              <!-- Formulario de personalizaciÃ³n -->
              <form id="personalizationForm">
                <div class="form-section">
                  <h4><i class="fas fa-palette"></i> Tema</h4>
                  
                  <!-- Modo de tema -->
                  <div class="form-group">
                    <label>Modo:</label>
                    <div class="radio-group">
                      <input type="radio" id="light-mode" name="theme.mode" value="light" 
                             <%= (!personalization['theme.mode'] || personalization['theme.mode'] === 'light') ? 'checked' : '' %>>
                      <label class="radio-option" for="light-mode">
                        <i class="fas fa-sun"></i> Claro
                      </label>

                      <input type="radio" id="dark-mode" name="theme.mode" value="dark"
                             <%= personalization['theme.mode'] === 'dark' ? 'checked' : '' %>>
                      <label class="radio-option" for="dark-mode">
                        <i class="fas fa-moon"></i> Oscuro
                      </label>
                    </div>
                  </div>

                  <!-- Color principal -->
                  <div class="form-group">
                    <label>Color principal:</label>
                    <div class="color-group">
                      <% const colors = [
                        { value: '#1a3c7c', name: 'Azul' },
                        { value: '#d53232ff', name: 'Rojo' },
                        { value: '#059669', name: 'Verde' },
                        { value: '#7c3aed', name: 'Morado' },
                        { value: '#ea580c', name: 'Naranja' }
                      ]; %>
                      <% colors.forEach(color => { %>
                        <div class="color-option-wrapper">
                          <input type="radio" 
                                 id="color-<%= color.value.replace('#', '') %>" 
                                 name="theme.primary_color" 
                                 value="<%= color.value %>" 
                                 <%= (!personalization['theme.primary_color'] && color.value === '#1a3c7c') || 
                                     personalization['theme.primary_color'] === color.value ? 'checked' : '' %>>
                          <label for="color-<%= color.value.replace('#', '') %>" class="color-option">
                            <span class="color-preview" style="background-color: <%= color.value %>"></span>
                            <span class="color-name"><%= color.name %></span>
                          </label>
                        </div>
                      <% }); %>
                    </div>
                  </div>
                </div>

                <div class="form-section">
                  <h4><i class="fas fa-globe"></i> Idioma</h4>
                  
                  <div class="form-group">
                    <label>Idioma de la interfaz:</label>
                    <select name="locale.language" class="form-select">
                      <option value="es" <%= (!personalization['locale.language'] || personalization['locale.language'] === 'es') ? 'selected' : '' %>>
                        ðŸ‡ªðŸ‡¸ EspaÃ±ol
                      </option>
                      <option value="en" <%= personalization['locale.language'] === 'en' ? 'selected' : '' %>>
                        ðŸ‡ºðŸ‡¸ English
                      </option>
                    </select>
                  </div>
                </div>

                <!-- Botones de acciÃ³n -->
                <div class="form-actions">
                  <button type="button" id="previewBtn" class="btn btn-outline">
                    <i class="fas fa-eye"></i> Vista previa
                  </button>
                  <button type="submit" id="saveBtn" class="btn btn-primary">
                    <i class="fas fa-save"></i> Guardar cambios
                  </button>
                </div>

                <!-- Loader y mensajes -->
                <div id="loader" class="loader" style="display: none;">
                  <i class="fas fa-spinner fa-spin"></i> Guardando...
                </div>
                <div id="message" class="message"></div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <%- include('footer') %>
    </div>
  </div>

<script>
    // PersonalizaciÃ³n actual
    window.userPersonalization = <%- JSON.stringify(personalization || {}) %>;
    
    // FunciÃ³n para aplicar cambios de personalizaciÃ³n inmediatamente
    function applyPersonalizationChanges(parameters) {
      console.log('ðŸŽ¨ Aplicando personalizaciÃ³n:', parameters);
      
      replacePersonalizationStyles(parameters);
      updateRootVariables(parameters);
      
      window.userPersonalization = { ...window.userPersonalization, ...parameters };
      console.log('âœ… PersonalizaciÃ³n aplicada');
      
      // Forzar repaint
      document.body.style.display = 'none';
      document.body.offsetHeight; // Trigger reflow
      document.body.style.display = '';
    }

    // FunciÃ³n para reemplazar completamente los estilos de personalizaciÃ³n
    function replacePersonalizationStyles(parameters) {
      let personalizationStyle = document.getElementById('personalization-styles');
      
      if (!personalizationStyle) {
        const existingStyles = Array.from(document.head.querySelectorAll('style'));
        personalizationStyle = existingStyles.find(style => 
          style.textContent.includes('--personalization-loaded')
        );
        
        if (personalizationStyle) {
          personalizationStyle.id = 'personalization-styles';
        } else {
          personalizationStyle = document.createElement('style');
          personalizationStyle.id = 'personalization-styles';
          document.head.appendChild(personalizationStyle);
        }
      }
      
      const finalParams = { ...window.userPersonalization, ...parameters };
      
      const colorVariants = {
        '#1a3c7c': { light: '#375ca1', dark: '#142c59' },
        '#d53232ff': { light: '#e76464ff', dark: '#ad2424ff' },
        '#059669': { light: '#1ec78fff', dark: '#068d67ff' },
        '#7c3aed': { light: '#946cf2ff', dark: '#6028bbff' },
        '#ea580c': { light: '#f3893dff', dark: '#c25125ff' }
      };
      
      const primaryColor = finalParams['theme.primary_color'] || '#1a3c7c';
      const themeMode = finalParams['theme.mode'] || 'light';
      const variants = colorVariants[primaryColor] || { light: primaryColor + '99', dark: primaryColor + 'dd' };
      
      let styleContent = `
          :root {
            --personalization-loaded: true;
            --primary-color: ${primaryColor}!important;
            --primary-color-light: ${variants.light}!important;
            --primary-color-dark: ${variants.dark}!important;
      `;
      
      if (themeMode === 'dark') {
        styleContent += `
            --background-color: #181818 !important;
            --text-color: rgba(241, 241, 241, 0.98) !important;
            --secondary-text-color: #aab1bb !important;
            --card-background: #222222 !important;
            --border-color: #2b2b2b !important;
        `;
      } else {
        styleContent += `
            --background-color: linear-gradient(135deg, #ffffff 0%, #ffffff 100%) !important;
            --text-color: #2c2c2c !important;
            --secondary-text-color: #64748b !important;
            --card-background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%) !important;
            --border-color: #ddd !important;
        `;
      }
      
      styleContent += `
            --primary-gradient: linear-gradient(135deg, ${primaryColor} 0%, ${variants.dark} 100%) !important;
            --secondary-gradient: linear-gradient(135deg, ${variants.light} 0%, ${variants.dark} 100%) !important;
            --terciary-gradient: linear-gradient(135deg, ${variants.dark} 0%, ${primaryColor} 100%) !important;
            --cuarter-gradient: linear-gradient(135deg, ${primaryColor} 0%, ${variants.light} 100%) !important;
            --mix-gradient: linear-gradient(90deg, ${variants.dark}, ${primaryColor}, ${variants.light}) !important;
          }
          
          body {
            transition: all 0.3s ease;
          }
      `;
      
      if (themeMode === 'dark') {
        styleContent += `
          body[data-theme="dark"] .menu-link img {
            filter: brightness(0) invert(1) !important;
          }
          
          body {
            background: #181818 !important;
            color: rgba(241, 241, 241, 0.98) !important;
          }
          
          .radio-option {
            background: #222222 !important;
            border-color: #2b2b2b !important;
            color: rgba(241, 241, 241, 0.98) !important;
          }
        `;
      } else {
        styleContent += `
          body {
            background: linear-gradient(135deg, #ffffff 0%, #ffffff 100%) !important;
            color: #2c2c2c !important;
          }
          
          .menu-link img {
            filter: none !important;
          }
          
          .radio-option {
            background: linear-gradient(135deg, #ffffff 0%, #ffffff 100%) !important;
            border-color: #ddd !important;
            color: #2c2c2c !important;
          }
        `;
      }
      
      styleContent += `
        .user-avatar i,
        .user-details h3,
        .form-section h4 {
          color: ${primaryColor} !important;
        }
        
        .btn-primary {
          background: ${primaryColor} !important;
          border-color: ${primaryColor} !important;
        }
        
        .btn-primary:hover:not(:disabled) {
          background: ${variants.dark} !important;
          border-color: ${variants.dark} !important;
        }
        
        .btn-outline {
          color: ${primaryColor} !important;
          border-color: ${primaryColor} !important;
        }
        
        .btn-outline:hover:not(:disabled) {
          background: ${primaryColor} !important;
        }
        
        .loader {
          color: ${primaryColor} !important;
        }
        
        .radio-option:hover {
          border-color: ${primaryColor} !important;
        }
        
        .radio-group input[type="radio"]:checked + .radio-option {
          border-color: ${primaryColor} !important;
          background: ${primaryColor} !important;
          color: white !important;
        }
        
        .radio-group input[type="radio"]:checked + .radio-option i {
          color: white !important;
        }
        
        .form-select:focus {
          border-color: ${primaryColor} !important;
        }
        
        .color-group input[type="radio"]:checked + .color-option {
          border-color: ${primaryColor} !important;
          border-width: 4px !important;
        }
      `;
      
      personalizationStyle.textContent = styleContent;
      document.body.setAttribute('data-theme', themeMode);
      console.log('ðŸŽ¨ Estilos de personalizaciÃ³n reemplazados');
    }

    function updateRootVariables(parameters) {
      const root = document.documentElement;
      
      Object.entries(parameters).forEach(([key, value]) => {
        switch(key) {
          case 'theme.primary_color':
            root.style.setProperty('--primary-color', value, 'important');
            
            const colorVariants = {
              '#1a3c7c': { light: '#375ca1', dark: '#142c59' },
              '#d53232ff': { light: '#e76464ff', dark: '#ad2424ff' },
              '#059669': { light: '#1ec78fff', dark: '#068d67ff' },
              '#7c3aed': { light: '#946cf2ff', dark: '#6028bbff' },
              '#ea580c': { light: '#f3893dff', dark: '#c25125ff' }
            };
            
            if (colorVariants[value]) {
              root.style.setProperty('--primary-color-light', colorVariants[value].light, 'important');
              root.style.setProperty('--primary-color-dark', colorVariants[value].dark, 'important');
            }
            break;
            
          case 'theme.mode':
            if (value === 'dark') {
              root.style.setProperty('--background-color', '#181818', 'important');
              root.style.setProperty('--text-color', 'rgba(241, 241, 241, 0.98)', 'important');
              root.style.setProperty('--secondary-text-color', '#aab1bb', 'important');
              root.style.setProperty('--card-background', '#222222', 'important');
              root.style.setProperty('--border-color', '#2b2b2b', 'important');
            } else {
              root.style.setProperty('--background-color', 'linear-gradient(135deg, #ffffff 0%, #ffffff 100%)', 'important');
              root.style.setProperty('--text-color', '#2c2c2c', 'important');
              root.style.setProperty('--secondary-text-color', '#64748b', 'important');
              root.style.setProperty('--card-background', 'linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%)', 'important');
              root.style.setProperty('--border-color', '#ddd', 'important');
            }
            break;
            
          case 'locale.language':
            document.documentElement.lang = value;
            break;
        }
      });
    }

    function showMessage(text, type = 'info', icon = 'fas fa-info-circle') {
      const message = document.getElementById('message');
      message.innerHTML = `<i class="${icon}"></i> ${text}`;
      message.className = `message ${type}`;
      message.style.display = 'block';
    }

    function hideMessage() {
      const message = document.getElementById('message');
      message.style.display = 'none';
    }

    // Evento principal - Submit del formulario
    document.getElementById('personalizationForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const loader = document.getElementById('loader');
      const saveBtn = document.getElementById('saveBtn');
      
      loader.style.display = 'block';
      hideMessage();
      saveBtn.disabled = true;
      
      try {
        const formData = new FormData(this);
        const parameters = {};
        
        for (let [key, value] of formData.entries()) {
          parameters[key] = value;
        }
        
        console.log('ðŸ”„ Guardando parÃ¡metros:', parameters);
        
        // Aplicar cambios inmediatamente
        applyPersonalizationChanges(parameters);
        
        const response = await fetch('/api/personalization', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ parameters })
        });
        
        console.log('ðŸ“¥ Response status:', response.status);
        
        if (!response.headers.get('content-type')?.includes('application/json')) {
          throw new Error(`Servidor retornÃ³ contenido no vÃ¡lido: ${response.status}`);
        }
        
        const result = await response.json();
        console.log('ðŸ“¥ Response data:', result);
        
        if (result.ok) {
          showMessage('Cambios guardados y aplicados correctamente', 'success', 'fas fa-check-circle');
          
          // Actualizar sesiÃ³n del servidor
          const refreshResponse = await fetch('/api/refresh-personalization', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
          });
          
          if (refreshResponse.ok) {
            console.log('âœ… SesiÃ³n actualizada correctamente');
          } else {
            console.log('âš ï¸ No se pudo actualizar la sesiÃ³n');
          }
        } else {
          const errorMsg = result.error || result.message || `Error ${response.status}`;
          throw new Error(errorMsg);
        }
        
      } catch (error) {
        console.error('âŒ Error completo:', error);
        
        let errorMessage = error.message;
        
        if (error.name === 'TypeError' && error.message.includes('fetch')) {
          errorMessage = 'Error de conexiÃ³n. Verifica tu conexiÃ³n a internet.';
        }
        
        showMessage(`Error: ${errorMessage}`, 'error', 'fas fa-exclamation-triangle');
        
        // Revertir cambios en caso de error
        applyPersonalizationChanges(window.userPersonalization);
        console.log('ðŸ”„ Cambios revertidos por error');
      } finally {
        loader.style.display = 'none';
        saveBtn.disabled = false;
        
        setTimeout(() => hideMessage(), 8000);
      }
    });
    
    // Vista previa
    document.getElementById('previewBtn').addEventListener('click', function() {
      const formData = new FormData(document.getElementById('personalizationForm'));
      const parameters = {};
      
      for (let [key, value] of formData.entries()) {
        parameters[key] = value;
      }
      
      applyPersonalizationChanges(parameters);
      showMessage('Vista previa aplicada. Guarda los cambios para hacerlos permanentes.', 'info', 'fas fa-eye');
      
      setTimeout(() => hideMessage(), 3000);
    });

    // Estilos adicionales
    const additionalStyles = document.createElement('style');
    additionalStyles.textContent = `
      .message {
        display: none;
        padding: 10px 15px;
        border-radius: 5px;
        margin-top: 10px;
      }
      .message.info {
        background: #d1ecf1;
        color: #0c5460;
        border: 1px solid #bee5eb;
      }
      .message.success {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
      }
      .message.error {
        background: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
      }
      
      body[data-theme="dark"] .message.info {
        background: rgba(13, 202, 240, 0.2);
        color: #9eeaf9;
        border-color: rgba(13, 202, 240, 0.3);
      }
      body[data-theme="dark"] .message.success {
        background: rgba(25, 135, 84, 0.2);
        color: #75b798;
        border-color: rgba(25, 135, 84, 0.3);
      }
      body[data-theme="dark"] .message.error {
        background: rgba(220, 53, 69, 0.2);
        color: #ea868f;
        border-color: rgba(220, 53, 69, 0.3);
      }
    `;
    document.head.appendChild(additionalStyles);
    
    console.log('ðŸš€ Perfil cargado con personalizaciÃ³n:', window.userPersonalization);
  </script>
</body>
</html>