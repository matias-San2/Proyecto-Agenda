<!DOCTYPE html>
<html lang="<%= lang %>">

<head>
  <meta charset="UTF-8">
  <title><%= t('box.title') %></title>
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/box.css">
  <link rel="stylesheet" href="/css/footer.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

  <!-- El bloque <style> se ha eliminado y se reemplaza por esta línea -->
  <%- include('partials/personalization-styles') %>

</head>
<!-- Se añade el atributo data-theme al body -->
<body data-theme="<%= (locals.personalization && personalization['theme.mode']) || 'light' %>">
    <% const brandingSource = (typeof personalization !== 'undefined' && personalization) ? personalization : (locals && locals.personalization ? locals.personalization : null); %>
    <% const branding = (brandingSource && brandingSource.branding) ? brandingSource.branding : {}; %>
    <% const brandingIcons = (branding && branding.icons) ? branding.icons : {}; %>
    <div class="container-fluid">
        <div class="row">
            <%- include('navbar') %>

            <div class="main">
                <!--  
                <% if (canWrite) { %>
                    <a href="/en-curso"
                        class="fab-consultas"
                        aria-label="<%= t('box.in_progress_aria') %>"
                        data-bs-toggle="tooltip"
                        data-bs-placement="left"
                        title="<%= t('box.in_progress_title') %>">
                        <i class="fas fa-stethoscope" aria-hidden="true"></i>
                    </a>
                <% } %>
                -->

                <!-- Botón flotante: Volver arriba -->
                <button id="backToTop"
                        class="back-to-top"
                        type="button"
                        aria-label="<%= t('box.back_to_top_aria') %>"
                        title="<%= t('box.back_to_top_title') %>">
                    <i class="fas fa-arrow-up" aria-hidden="true"></i>
                </button>

                <div class="top-header">
                    <div class="header-row">
                    <h1><%= t('box.header') %></h1>
                    </div>
                </div>

                <!-- Filtros -->
                <div class="filtros">
                    <div class="filtros-inputs">
                    <input type="text" id="filtroPasillo" placeholder="<%= t('box.filters.filter_corridor') %>" aria-label="<%= t('box.filters.filter_corridor') %>">
                    <input type="text" id="filtroBox" placeholder="<%= t('box.filters.filter_box') %>" aria-label="<%= t('box.filters.filter_box') %>">
                    <select id="filtroEstado" aria-label="<%= t('box.filters.filter_state') %>">
                        <option value=""><%= t('box.filters.show_all') %></option>
                        <option value="en-uso"><%= t('common.state_in_use') %></option>
                        <option value="en-espera"><%= t('common.state_waiting') %></option>
                        <option value="libre"><%= t('common.state_free') %></option>
                        <option value="inhabilitado"><%= t('common.state_disabled') %></option>
                    </select>
                    </div>
                    <div class="filtros-botones">
                    <button onclick="reiniciarFiltros()"><%= t('common.reset_filters') %></button>
                    <button id="toggle-detalles" class="btn-toggle-detalles"><%= t('common.show_details') %></button>
                    </div>
                </div>

                <!-- Resumen de estados -->
                <div class="resumen-estados row align-items-stretch" id="resumenEstados">
                    <div class="col-5 col-sm-5 col-md-3 col-lg-2 mb-4">
                    <div class="estado-card libre">
                        <h4><%= t('common.boxes_free') %></h4>
                        <p id="count-libre">0</p>
                    </div>
                    </div>
                    <div class="col-5 col-sm-5 col-md-3 col-lg-2 mb-4">
                    <div class="estado-card en-espera">
                        <h4><%= t('common.boxes_waiting') %></h4>
                        <p id="count-en-espera">0</p>
                    </div>
                    </div>
                    <div class="col-5 col-sm-5 col-md-3 col-lg-2 mb-4">
                    <div class="estado-card en-uso">
                        <h4><%= t('common.boxes_in_use') %></h4>
                        <p id="count-en-uso">0</p>
                    </div>
                    </div>
                    <div class="col-5 col-sm-5 col-md-3 col-lg-2 mb-4">
                    <div class="estado-card inhabilitado">
                        <h4><%= t('common.boxes_disabled') %></h4>
                        <p id="count-inhabilitado">0</p>
                    </div>
                    </div>
                </div>

                <!-- Mensaje sin resultados -->
                <div id="mensaje-no-resultados" class="no-resultados" style="display: none;">
                    <img src="<%= brandingIcons.box || '/icons/box.webp' %>" class="icon" alt="Box icon">
                    <h3><%= t('common.no_results') %></h3>
                    <p><%= t('common.no_results_desc') %></p>
                </div>

                <!-- Render dinámico de pasillos y boxes -->
                <% Object.keys(pasillo_box_map).forEach(pasilloNombre => { 
                    const match = pasilloNombre.match(/\d+/);
                    const count = match ? parseInt(match[0], 10) : 0;
                %>
                    <div class="pasillo-bloque" data-pasillo-nombre="<%= pasilloNombre %>">
                        <div class="pasillo-nombre"><%= count ? t('box.corridor_prefix', { count: count }) : pasilloNombre %></div>
                        <div class="pasillo-content row">
                        <% pasillo_box_map[pasilloNombre].forEach(box => { %>
                            <div class="col-12 col-sm-6 col-md-4 col-lg-4 col-xl-3 col-xxl-2 mb-3">
                            <% if (canViewDetail) { %>
                                <!-- Si tiene permiso, hacer clickeable -->
                                <a href="/box/<%= box.id %>" 
                                class="box-card" 
                                data-box-nombre="<%= box.nombre %>" 
                                data-pasillo="<%= pasilloNombre %>">
                            <% } else { %>
                                <!-- Si no tiene permiso, mostrar como div sin enlace -->
                                <div class="box-card disabled" 
                                data-box-nombre="<%= box.nombre %>" 
                                data-pasillo="<%= pasilloNombre %>"
                                title="<%= t('box.no_permission_title') %>">
                            <% } %>
                                <h3><%= box.nombre %></h3>
                                <div id="info-box-<%= box.id %>" class="info-box">
                                    <div class="contenido-box oculto">
                                        <p></p>
                                    </div>
                                    <div class="estado-bar <%= box.estado.replace(/\s+/g, '-').toLowerCase() %>">
                                        <%= box.estado %>
                                    </div>
                                </div>
                            <% if (canViewDetail) { %>
                                </a>
                            <% } else { %>
                                </div>
                            <% } %>
                            </div>
                        <% }) %>
                        </div>
                    </div>
                <% }) %>
            </div>

            <%- include('footer') %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.translations = {
            nextAppointment: "<%= t('box.next_appointment') %>",
            notNextAppointment: "<%= t('box.no_next_consultations') %>",
            doctor: "<%= t('common.doctor') %>",
            specialty: "<%= t('common.specialty') %>",
            time: "<%= t('common.hour') || t('common.start_time') %>",
            hideDetails: "<%= t('box.hide_details') %>",
            showDetails: "<%= t('common.show_details') %>"
        };
    </script>
    <script src="/js/box.js?v=<%= Date.now() %>"></script>
</body>
</html>
