<!-- Notificación de importación -->
<div id="notificacion-importacion" class="notificacion-importacion d-none">
    <div class="icon-success">
        <i class="fas fa-check"></i>
    </div>
    <div class="mensaje" id="notificacion-importacion-mensaje">
        <%= t('common.import_success', 'Importación completada exitosamente') %>
    </div>
    <button class="btn btn-sm ms-3" onclick="verDetallesImportacion()">
        <i class="fas fa-eye me-1"></i><%= t('common.view_details', 'Ver detalles') %>
    </button>
</div>

<!-- Modal para mostrar detalles de la importación -->
<div class="modal fade" id="modalDetalleImportacion" tabindex="-1" aria-labelledby="detalleImportacionLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-medical">
                <h5 class="modal-title" id="detalleImportacionLabel">
                    <%= t('common.import_details', 'Detalles de la Importación') %>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="<%= t('common.close', 'Cerrar') %>"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped align-middle mb-0">
                        <caption class="visually-hidden"><%= t('common.import_table_caption', 'Detalles de la importación de consultas médicas') %></caption>
                        <thead class="table-medical">
                            <tr>
                                <th scope="col">
                                    <div class="th-content">
                                        <i class="fas fa-calendar me-2"></i>
                                        <span><%= t('common.date', 'Fecha') %></span>
                                    </div>
                                </th>
                                <th scope="col">
                                    <div class="th-content">
                                        <i class="fas fa-clock me-2"></i>
                                        <span><%= t('common.start_time', 'Hora Inicio') %></span>
                                    </div>
                                </th>
                                <th scope="col">
                                    <div class="th-content">
                                        <i class="fas fa-clock me-2"></i>
                                        <span><%= t('common.end_time', 'Hora Fin') %></span>
                                    </div>
                                </th>
                                <th scope="col">
                                    <div class="th-content">
                                        <i class="fas fa-user-md me-2"></i>
                                        <span><%= t('common.doctor', 'Médico') %></span>
                                    </div>
                                </th>
                                <th scope="col">
                                    <div class="th-content">
                                        <i class="fas fa-door-open me-2"></i>
                                        <span><%= t('common.box', 'Box') %></span>
                                    </div>
                                </th>
                                <th scope="col">
                                    <div class="th-content">
                                        <i class="fas fa-stethoscope me-2"></i>
                                        <span><%= t('common.consult_type', 'Tipo Consulta') %></span>
                                    </div>
                                </th>
                                <th scope="col">
                                    <div class="th-content">
                                        <i class="fas fa-info-circle me-2"></i>
                                        <span><%= t('common.status', 'Estado') %></span>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody id="detalleImportacionTablaBody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
